<project name = "TOBEREPLACED" default = "compile" basedir = ".">
   <property name = "testdir" location = "test" />
   <property name = "srcdir" location = "src" />
   <property name = "classdir" location = "bin" />
   <property name = "full-compile" value = "true" />
   <property name = "test" value="${D}" />
   <path id = "classpath.base"/>
	
   <path id = "classpath.test">
       <pathelement location = "~/.junit/junit-4.13.1.jar" />
       <pathelement location = "~/.junit/hamcrest-core-1.3.jar" />
      <pathelement location = "${testdir}" />
      <pathelement location = "${srcdir}" />
      <pathelement location = "${classdir}" />
      <path refid = "classpath.base" />
   </path>
	
   <target name = "clean" >
      <delete verbose = "${full-compile}">
         <fileset dir = "${testdir}" includes = "**/*.class" />
      </delete>
   </target>
	
   <target name = "compile" depends = "clean">
	 <javac includeantruntime="false" srcdir = "${srcdir};${testdir}" destdir = "${classdir}" 
         verbose = "${full-compile}">
         <classpath refid = "classpath.test"/>
      </javac>
   </target>
   
</project>

